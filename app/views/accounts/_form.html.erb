<%= form_for(@account) do |f| %>
  <% if @account.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@account.errors.count, "error") %> prohibited this account from being saved:</h2>

      <ul>
      <% @account.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :login %><br />
    <%= f.text_field :login %>
  </div>
  <div class="field">
    <%= f.label :password %><br />
    <%= f.text_field :password %>
  </div>
  <div class="field">
    <%= f.label :type%><br />
    <% [ 'Gmail', 'Yahoo', 'Hotmail', 'Twitter' ].each do |account_type| %>
      <%= radio_button_tag :type, account_type + "Account", :type == account_type %>
      <%= account_type.humanize %>
    <% end %>
  </div>
  <div class="field">
    <%= f.label :oauth_token %><br />
    <%= f.text_field :oauth_token %>
  </div>
  <div class="field">
    <%= f.label :last_sync_time %><br />
    <%= f.datetime_select :last_sync_time %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
